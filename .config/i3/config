# Assign workspaces to output
workspace "$w1" output $monitor_main
workspace "$w2" output $monitor_sec
workspace "$w3" output $monitor_ter
workspace "$w4" output $monitor_sec
workspace "$w5" output $monitor_ter

# Auto-rename command
bindsym $mod+Shift+n \
rename workspace 1 to $w1; \
rename workspace 2 to $w2; \
rename workspace 3 to $w3; \
rename workspace 4 to $w4; \
rename workspace 5 to $w5;

