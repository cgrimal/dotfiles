# Use rofi, not dmenu
bindsym $mod+d exec --no-startup-id "rofi -show run -config ~/.config/i3/rofi -fuzzy";

# Shutter
bindsym Shift+Mod1+1 exec shutter -s
bindsym Shift+Mod1+2 exec shutter -w
bindsym Shift+Mod1+3 exec shutter -f

# Workspace names
set $w1 1 :  messaging
set $w2 2 :  dev
set $w3 3 :  web
set $w4 4 :  four
set $w5 5 :  cinco
